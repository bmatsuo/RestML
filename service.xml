<?xml version="1.0" encoding="UTF-8"?>
<service xmlns="http://x.bmats.co/rest-service/2013.01"
         xmlns:rest="http://x.bmats.co/rest/2013.01"
         xmlns:meta="http://x.bmats.co/rest-meta/2013.01"
         xmlns:model="http://x.bmats.co/rest-model/2013.01">
    <meta:title>RestML Sample Service</meta:title>
    <meta:description>
        A simple service that demonstrates the capabilities of RestML.
    </meta:description>
    <meta:license type="Apache 2.0" href="http://www.apache.org/licenses/LICENSE-2.0.html"/>
    <meta:terms type="Terms of Service" href="http://bmats.co/terms"/>

    <rest:api baseUrl="http://meme.bmats.co" version="2.29.5-E">
        <meta:title>Memes</meta:title>

        <rest:group>
            <meta:title>Cats</meta:title>
            <meta:subtitle>u can haz</meta:subtitle>

            <rest:resource path="/cats">
                <rest:action method="GET">
                    <meta:title>Find a cat</meta:title>
                    <rest:param name="caption" type="query">
                        <model:restricts value="string"/>
                        <model:enumeration value="meooow"/>
                        <model:enumeration value="meow meow"/>
                    </rest:param>
                    <rest:response status="2xx">
                        <rest:model ref="ok"/>
                    </rest:response>
                </rest:action>
            </rest:resource>

            <rest:resource path="/bar"/>
        </rest:group>

        <rest:group>
            <meta:title>Kids</meta:title>
            <meta:subtitle>SUCCESS!</meta:subtitle>
        </rest:group>

        <rest:model id="ok">
            <meta:title>OK</meta:title>
            <meta:description>A generic success message with no extra information.</meta:description>
            <rest:view contentType="text/plain"/>
            <rest:view contentType="text/xml"/>
            <rest:view contentType="application/json"/>
        </rest:model>
    </rest:api>

    <rest:api baseUrl="http://fail.bmats.co" version="5.14.3-9">
        <meta:title>Fails</meta:title>

        <rest:group>
            <meta:title>Epic</meta:title>
            <meta:subtitle>ZOMFG!!1!</meta:subtitle>
            <rest:resource path="/epic">

                <rest:action method="GET">
                    <meta:title>Find an epic fail</meta:title>
                    <rest:response status="2xx">
                        <rest:model ref="fail"/>
                    </rest:response>
                </rest:action>

                <rest:action method="POST">
                    <meta:title>Upload an epic fail</meta:title>
                    <rest:param name="url" type="form" required="true">
                        <model:restricts value="url"/>
                        <model:maxLength value="1000"/>
                    </rest:param>
                    <rest:param name="count" type="form">
                        <model:restricts value="positive-integer"/>
                        <model:minExclusive value="0"/>
                        <model:max value="1000"/>
                    </rest:param>
                    <rest:response status="3xx">
                    </rest:response>
                </rest:action>

            </rest:resource>
        </rest:group>

        <rest:model id="fail">
            <meta:title>Faily Fail MacFailery</meta:title>
            <meta:description>A funny video or picture of people failing.</meta:description>
            <rest:view contentType="image/png"/>
            <rest:view contentType="image/jpg"/>
            <rest:view contentType="image/gif"/>
            <rest:view contentType="video/mpeg-4"/>
        </rest:model>
    </rest:api>
</service>
